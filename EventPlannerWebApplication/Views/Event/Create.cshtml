@{
    ViewData["Title"] = "Создание события";
    var userName = ViewBag.UserName as string;
}

<div class="container mt-5">
    <div class="card p-4 shadow">
        <h2 class="mb-4 text-center">Создать событие</h2>

        <form method="post" action="/Event/Create">

            <div class="mb-3">
                <label class="form-label">Название события</label>
                <input type="text" name="title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Ваше имя</label>
                <input type="text" name="creatorName" class="form-control"
                       value="@userName" @(userName != null ? "readonly" : "") required />
            </div>

            <div class="mb-3">
                <label class="form-label">Тип планирования</label>
                <select id="dateType" name="isFixedDate" class="form-select" onchange="toggleDateType()">
                    <option value="true">Фиксированное время</option>
                    <option value="false">Гибкое время</option>
                </select>
            </div>

            <input type="hidden" name="timezoneOffset" id="timezoneOffset" value="" />

            <!-- Фиксированное -->
            <div id="fixedDateBlock">
                <div class="mb-3">
                    <label>Начало</label>
                    <input type="datetime-local" name="fixedStart" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Окончание</label>
                    <input type="datetime-local" name="fixedEnd" class="form-control" />
                </div>
            </div>

            <!-- Гибкое -->
            <div id="flexibleDateBlock" style="display:none;">
                <label>Возможные интервалы</label>
                <div id="flexibleContainer"></div>

                <button type="button" class="btn btn-outline-primary mt-2" onclick="addInterval()">
                    + Добавить интервал
                </button>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <button type="submit" class="btn btn-success" onclick="setOffsetBeforeSubmit()">
                    Создать событие
                </button>
                <a href="/Event/Cancel" class="btn btn-secondary">Отмена</a>
            </div>

            @Html.ValidationSummary()
        </form>
    </div>
</div>

<script>
    function toggleDateType() {
        const type = document.getElementById("dateType").value;
        document.getElementById("fixedDateBlock").style.display = type === "true" ? "block" : "none";
        document.getElementById("flexibleDateBlock").style.display = type === "false" ? "block" : "none";
    }

    function addInterval() {
        const container = document.getElementById("flexibleContainer");

        const html = `
        <div class="interval-row border rounded p-2 mt-2">

            <!-- Упрощённый ввод -->
            <div class="simple-input row g-2 align-items-end">
                <div class="col">
                    <label>Дата</label>
                    <input type="date" class="form-control date-input" required>
                </div>

                <div class="col">
                    <label>С</label>
                    <input type="time" class="form-control time-start-input" required>
                </div>

                <div class="col">
                    <label>До</label>
                    <input type="time" class="form-control time-end-input" required>
                </div>

                <div class="col-auto">
                    <button type="button" class="btn btn-outline-secondary" onclick="switchToDateTime(this)">
                        Ввести датами
                    </button>
                </div>

                <div class="col-auto">
                    <button type="button" class="btn btn-outline-danger" onclick="removeInterval(this)">
                        ✖
                    </button>
                </div>
            </div>

            <!-- Расширенный ввод -->
            <div class="datetime-input row g-2 align-items-end mt-2" style="display:none;">
                <div class="col">
                    <label>Начало</label>
                    <input type="datetime-local" name="flexibleStart" class="form-control">
                </div>

                <div class="col">
                    <label>Окончание</label>
                    <input type="datetime-local" name="flexibleEnd" class="form-control">
                </div>

                <div class="col-auto">
                    <button type="button" class="btn btn-outline-secondary" onclick="switchToSimple(this)">
                        Ввести по времени
                    </button>
                </div>

                <div class="col-auto">
                    <button type="button" class="btn btn-outline-danger" onclick="removeInterval(this)">
                        ✖
                    </button>
                </div>
            </div>

        </div>
        `;

        container.insertAdjacentHTML("beforeend", html);
    }

    function removeInterval(button) {
        const container = document.getElementById("flexibleContainer");

        if (container.children.length <= 1) {
            alert("Должен остаться хотя бы один интервал");
            return;
        }

        button.closest(".interval-row").remove();
    }

    function switchToDateTime(btn) {
        const row = btn.closest(".interval-row");

        const simple = row.querySelector(".simple-input");
        const datetime = row.querySelector(".datetime-input");

        simple.style.display = "none";
        datetime.style.display = "flex";

        simple.querySelectorAll("input").forEach(i => {
            i.required = false;
            i.disabled = true;
        });

        datetime.querySelectorAll("input").forEach(i => {
            i.required = true;
            i.disabled = false;
        });
    }

    function switchToSimple(btn) {
        const row = btn.closest(".interval-row");

        const simple = row.querySelector(".simple-input");
        const datetime = row.querySelector(".datetime-input");

        datetime.style.display = "none";
        simple.style.display = "flex";

        datetime.querySelectorAll("input").forEach(i => {
            i.required = false;
            i.disabled = true;
        });

        simple.querySelectorAll("input").forEach(i => {
            i.required = true;
            i.disabled = false;
        });
    }

    function setOffsetBeforeSubmit() {
        var offset = new Date().getTimezoneOffset();
        document.getElementById('timezoneOffset').value = offset;
    }

    document.querySelector("form").addEventListener("submit", function () {

        document.querySelectorAll(".simple-input").forEach(block => {

            const date = block.querySelector(".date-input").value;
            const start = block.querySelector(".time-start-input").value;
            const end = block.querySelector(".time-end-input").value;

            if (date && start && end) {
                const startDT = `${date}T${start}`;
                const endDT = `${date}T${end}`;

                const row = block.closest(".interval-row");
                const startInput = row.querySelector(".datetime-input input[name='flexibleStart']");
                const endInput = row.querySelector(".datetime-input input[name='flexibleEnd']");

                if (startInput && endInput) {
                    startInput.value = startDT;
                    endInput.value = endDT;

                    startInput.disabled = false;
                    endInput.disabled = false;
                }
            }
        });
    });
</script>
