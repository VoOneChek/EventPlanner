@{
    ViewData["Title"] = "Присоединиться к событию";
    var userName = ViewBag.UserName as string;
}

<div class="container mt-5">
    <div class="card p-4 shadow">
        <h2>Присоединиться к событию</h2>

        <form method="post" action="/Event/Join">

            <div class="mb-3">
                <label>Код события</label>
                <input type="text" name="code" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Ваше имя</label>
                <input type="text" name="participantName" class="form-control"
                       value="@userName" @(userName != null ? "readonly" : "") required />
            </div>

            <div class="d-flex justify-content-between mt-3">
                <button class="btn btn-primary">Продолжить</button>
                <a href="/Home/Menu" class="btn btn-secondary">Отмена</a>
            </div>

            @Html.ValidationSummary()
        </form>
    </div>
</div>
