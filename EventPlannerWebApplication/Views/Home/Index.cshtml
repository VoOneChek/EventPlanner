@{
    ViewData["Title"] = "Event Planner - Планируйте встречи легко";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100 py-5">
        <div class="col-lg-10">
            <div class="card glass-card overflow-hidden">
                <div class="row g-0">
                    <!-- Центр -->
                    <div class="col-12 text-center py-4 bg-white bg-opacity-75 border-bottom border-light">
                        <h1 class="fw-bold mb-1 text-primary display-6">
                            <i class="bi bi-calendar-check-fill me-2"></i>Event Planner
                        </h1>
                        <p class="text-muted small mb-0 letter-spacing-1">Планируйте встречи легко и эффективно</p>
                    </div>
                    <!-- Левая часть - Форма входа -->
                    <div class="col-md-6 p-5">
                        <div class="text-center mb-4">
                            <div class="feature-icon">
                                <i class="bi bi-calendar-event text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <h2 class="fw-bold mb-3">Вход в систему</h2>
                            <p class="text-muted">Войдите, чтобы получить полный доступ ко всем функциям</p>
                        </div>

                        <form method="post" action="/Account/Login">
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Email адрес</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input type="email" name="email" class="form-control" placeholder="ваш@email.com" required>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Пароль</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input type="password" name="password" class="form-control" placeholder="Введите пароль" required>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Войти
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="mb-0">Ещё нет аккаунта?</p>
                                <a href="#" class="btn btn-link text-decoration-none fw-semibold"
                                   data-bs-toggle="modal" data-bs-target="#registerModal">
                                    <i class="bi bi-person-plus me-1"></i>Зарегистрироваться
                                </a>
                            </div>
                        </form>
                    </div>

                    <!-- Правая часть - Анонимный вход -->
                    <div class="col-md-6 bg-light p-5 d-flex flex-column justify-content-center">
                        <div class="text-center mb-4">
                            <div class="feature-icon bg-primary bg-opacity-10">
                                <i class="bi bi-incognito text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <h3 class="fw-bold mb-3">Быстрый доступ</h3>
                            <p class="text-muted">Начните планирование без регистрации</p>
                        </div>

                        <div class="d-grid gap-3">
                            <div class="row g-2">
                                <div class="col-6">
                                    <a href="/Event/Create" class="btn btn-primary-gradient btn-lg w-100 h-100 d-flex flex-column justify-content-center align-items-center py-4">
                                        <i class="bi bi-plus-circle mb-2" style="font-size: 2rem;"></i>
                                        <span class="fw-bold fs-5">Создать событие</span>
                                        <small class="text-light opacity-75 mt-1">Новая встреча</small>
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="/Event/Join" class="btn btn-success-gradient btn-lg w-100 h-100 d-flex flex-column justify-content-center align-items-center py-4">
                                        <i class="bi bi-people mb-2" style="font-size: 2rem;"></i>
                                        <span class="fw-bold fs-5">Присоединиться</span>
                                        <small class="text-light opacity-75 mt-1">К существующей</small>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top text-center">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Анонимные пользователи имеют ограниченный доступ
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно регистрации -->
<div class="modal fade" id="registerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Регистрация</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="/Account/Register">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Имя</label>
                        <input type="text" name="name" class="form-control" placeholder="Ваше имя" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" placeholder="email@example.com" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Пароль</label>
                        <input type="password" name="password" class="form-control" placeholder="Не менее 6 символов" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Подтвердите пароль</label>
                        <input type="password" name="confirmPassword" class="form-control" placeholder="Повторите пароль" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (TempData["ModalError"] != null)
{
    <div class="modal fade" id="errorModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Ошибка</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>@TempData["ModalError"]</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Ок</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modal = new bootstrap.Modal(document.getElementById('errorModal'));
            modal.show();
        });
    </script>
}
