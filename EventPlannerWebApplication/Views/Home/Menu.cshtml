@{
    ViewData["Title"] = "Главное меню";
    bool isAuthenticated = true; // Измените на реальную логику
}

<div class="container py-5">
    <!-- Хедер -->
    <div class="hero mb-5">
        <div class="container text-center">
            <h1 class="display-5 fw-bold mb-3">
                <i class="bi bi-calendar2-week me-2"></i>Event Planner
            </h1>
            <p class="lead">Планируйте встречи легко и эффективно</p>
            @if (isAuthenticated)
            {
                <div class="badge bg-light text-primary px-3 py-2 mb-3">
                    <i class="bi bi-person-check me-1"></i>Вы вошли как пользователь
                </div>
            }
            else
            {
                <div class="badge bg-warning text-dark px-3 py-2 mb-3">
                    <i class="bi bi-incognito me-1"></i>Анонимный режим
                </div>
            }
        </div>
    </div>

    <div class="row">
        <!-- Основные действия -->
        <div class="@(isAuthenticated ? "col-lg-8" : "col-12")">
            <h2 class="fw-bold mb-4">Доступные действия</h2>
            <div class="row">
                <!-- Общие для всех -->
                <div class="col-md-6 mb-4">
                    <div class="card menu-card h-100">
                        <i class="bi bi-plus-circle"></i>
                        <h4 class="fw-bold">Создать событие</h4>
                        <p class="text-muted mb-3">Организуйте новую встречу и пригласите участников</p>
                        <a href="/Event/Create" class="btn btn-primary">Создать</a>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card menu-card h-100">
                        <i class="bi bi-people"></i>
                        <h4 class="fw-bold">Присоединиться к событию</h4>
                        <p class="text-muted mb-3">Укажите своё время для существующей встречи</p>
                        <a href="/Event/Join" class="btn btn-primary">Присоединиться</a>
                    </div>
                </div>

                <!-- Только для авторизованных -->
                @if (isAuthenticated)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card menu-card h-100">
                            <i class="bi bi-calendar3"></i>
                            <h4 class="fw-bold">Мои события</h4>
                            <p class="text-muted mb-3">Просмотрите все созданные вами события</p>
                            <a href="/Event/MyEvents" class="btn btn-primary">Посмотреть</a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Боковая панель для авторизованных -->
        @if (isAuthenticated)
        {
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-3">
                            <i class="bi bi-person-circle me-2"></i>Мой профиль
                        </h5>
                        <div class="d-flex align-items-center mb-4">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                <i class="bi bi-person-fill text-primary" style="font-size: 1.5rem;"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-0">Иван Иванов</h6>
                                <small class="text-muted">user@example.com</small>
                            </div>
                        </div>

                        <div class="list-group list-group-flush">
                            <a href="/Account/Profile" class="list-group-item list-group-item-action border-0 py-3">
                                <i class="bi bi-pencil me-2"></i>Редактировать профиль
                            </a>
                            <a href="/Account/Logout" class="list-group-item list-group-item-action border-0 py-3 text-danger">
                                <i class="bi bi-box-arrow-right me-2"></i>Выйти
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Для анонимных -->
            <div class="col-12 mt-4">
                <div class="alert alert-warning">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>Ограниченный доступ
                    </h5>
                    <p>
                        В анонимном режиме доступны только базовые функции.
                        <a href="/Account/Login" class="alert-link">Войдите в систему</a>
                        для получения полного доступа к истории событий, управлению профилем и другим функциям.
                    </p>
                </div>
            </div>
        }
    </div>
</div>