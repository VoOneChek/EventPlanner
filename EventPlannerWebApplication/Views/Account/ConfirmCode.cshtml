@{
    ViewData["Title"] = "Подтверждение почты";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h3 class="text-center mb-3">Подтверждение регистрации</h3>
                <p class="text-muted text-center">
                    На вашу почту был отправлен код подтверждения
                </p>

                <form method="post" action="/Account/ConfirmCode">
                    <div class="mb-3">
                        <label class="form-label">Введите код</label>
                        <input type="text" name="code" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-2">
                        Подтвердить
                    </button>
                </form>

                <form method="post" action="/Account/CancelRegistration">
                    <button type="submit" class="btn btn-outline-danger w-100">
                        Отмена
                    </button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">
                        @ViewBag.Error
                    </div>
                }
            </div>
        </div>
    </div>
</div>
